@model EmployeeDto

@{
    var department = new SelectList(ViewBag.Departments, nameof(Department.ID), nameof(Department.Name));
}

<form asp-action="Create" enctype="multipart/form-data">

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input type="number" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" />
        
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="number" asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Department"></label>
        <br/>
        <select class="from-control"  asp-for="DepartmentId" asp-items="@department">
        <option value="@null" > --Select Department </option>

        </select>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Image">Image</label>
        <br/>
        <input type="file" class="form-control-file" asp-for="Image" />

    </div>
   <br/>
    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List </a>


</form>