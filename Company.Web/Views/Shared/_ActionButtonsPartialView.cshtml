@model string
<td>
    <a asp-action="Details" asp-route-id="@Model" class="btn btn-warning">
        <i class="fas fa-eye"></i> Details
    </a>
</td>
<td>
    <a asp-action="Update" asp-route-id="@Model" class="btn btn-success">
        <i class="fas fa-edit"></i> Update
    </a>
</td>
<td>
    <form asp-action="Delete" asp-route-id="@Model" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this department?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </button>
    </form>
</td>


