@model RoleViewModel


@{
    ViewData["Title"] = "Update";
}

<h1>Create Page</h1>
<br />
<br />

<form asp-action="Update" asp-controller="Role" enctype="multipart/form-data">
 <input hidden asp-for="Id"/>

    <partial name="RolePartialViews/_CreateEditPartialView" model="@Model" />


    <div class="my-3">
        <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-success">Add Or Remove User</a>

    </div>
   

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>


